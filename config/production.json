{
  "app": {
    "name": "AI Terminal",
    "version": "1.0.0",
    "environment": "production"
  },
  "security": {
    "sandboxMode": true,
    "allowSudo": false,
    "allowNetworkCommands": false,
    "maxCommandLength": 1000,
    "commandTimeout": 30000,
    "restrictedPaths": ["/etc", "/sys", "/proc", "/boot", "/root"],
    "auditLogEnabled": true,
    "encryptionEnabled": true
  },
  "ai": {
    "rateLimit": 60,
    "rateWindow": 60000,
    "maxTokens": 1024,
    "temperature": 0.7,
    "fallbackOrder": ["claude", "openai", "gemini"],
    "healthCheckInterval": 300000
  },
  "cache": {
    "maxSize": 500,
    "ttl": 3600000,
    "enabled": true
  },
  "performance": {
    "maxHistoryLength": 100,
    "memoryThreshold": 200000000,
    "performanceMonitoring": true
  },
  "logging": {
    "level": "info",
    "maxFileSize": 10485760,
    "maxFiles": 5,
    "auditRetention": 2592000000
  },
  "plugins": {
    "enabled": true,
    "sandboxed": true,
    "maxExecutionTime": 30000,
    "allowedModules": ["path", "crypto", "util", "events"]
  },
  "remote": {
    "enabled": true,
    "maxConnections": 10,
    "connectionTimeout": 30000,
    "commandTimeout": 60000
  },
  "mcp": {
    "enabled": true,
    "maxServers": 5,
    "connectionTimeout": 10000,
    "toolTimeout": 30000
  }
}
